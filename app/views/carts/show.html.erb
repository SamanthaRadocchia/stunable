<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>Your Shopping Bag</h2>

<table>
  <% @cart.line_items.each do |item| %>
    <tr>
      <td><%= item.quantity %>&times;</td>
      <td><%= item.product.title %></td>
      <td class="item_price"><%= number_to_currency(item.total_price) %></td>
      <td class="delete_product_button"><%= button_to 'X', item, method: :delete,
          confirm:"Are you sure you want to remove the #{item.product.title} from your cart?" %> </td>
    </tr>
  <% end %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>

<table>
  <tr>

  	<td class="continue_shopping_button"><a href=<%= store_index_path %> class="myButton">keep shopping </a> </td>
    <td class="myButton"><%= link_to 'empty cart', @cart, method: :delete,
        data: { confirm: 'Are you sure you want to put everything back?' } %></td>
    
  </tr>
</table>