<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<!-- <h1>Stunable Blog</h1> -->

<% @blog_posts.each do |blog_post| %>
  <div class="entry">
  	<div class="entry-date">
  		<h2><%= blog_post.date %> </h2>
  	</div>
    <h1> <%= blog_post.title %>
    <h1><%#= link_to blog_post.title, blog_post, method: :show %></h1>

    <div class="by_author">
      <span class="author">posted by <%= blog_post.author %></span>
    </div>

    <p><%= sanitize(blog_post.body) %></p>
  </div>

<% end %>