<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Stunable Blog</h1>

<% @blog_posts.each do |blog_post| %>
  <div class="entry">
    <h3><%= blog_post.title %></h3>
    <p><%= sanitize(blog_post.body) %></p>
    <div class="price_line">
      <span class="price"><%= blog_post.author %></span>
    </div>
  </div>
<% end %>