<h1>Stunable Blog Admin</h1>

<a href=<%= new_blog_post_path %> class="myButton">+ new post </a>

<br />

<table>
<% @blog_posts.each do |blog_post| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

    <td class="list_description">
      <dl>
        <dt> <%= blog_post.date %>  </dt>
        <dt> <%= blog_post.title %> </dt>
        <dt> By <%= blog_post.author %> </dt>
        <dt> <%= blog_post.body %>  </dt>
      </dl>
    </td>

    <td class="list_actions">
      <%= link_to 'Show', blog_post %><br/>
      <%= link_to 'Edit', edit_blog_post_path(blog_post) %><br/>
      <%= link_to 'Destroy', blog_post, method: :delete,
                  data: { confirm: 'Are you sure you want to scrap your blog post?'} %>
    </td>
  </tr>
<% end %>
</table>




